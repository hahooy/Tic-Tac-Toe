doctype html
html
  head
    title Tic Tac Toe
    link(rel='stylesheet', href='bootstrap-3.3.6-dist/css/bootstrap.min.css')
    link(rel='stylesheet', href='style.css')
  body
    // modal for choosing the symbol before the game start
    #iconModal.modal.fade
      .modal-dialog
        .modal-content
          .modal-header
            button.close(type='button', data-dismiss='modal', aria-label='Close')
              span(aria-hidden='true') Ã—
            h4.modal-title Tic-Tac-Toe
          .modal-body
            p Play the simple game of X's and O's
          .modal-footer
            #player-option
              button#one-player.btn.btn-default(type='button') One Player
              button#two-player.btn.btn-default(type='button', data-dismiss='modal') Two Players
            // this block will display only when play against computer
            #turn-option.hide
              p.lead Would you like to play first?
              button#play-first.btn.btn-default(type='button', data-dismiss='modal') Yes
              button#play-second.btn.btn-default(type='button', data-dismiss='modal') No
            // end optional buttons
        // /.modal-content
      // /.modal-dialog
    // /.modal
    .row      
      .col-md-8.col-md-offset-2
        #game-container
          #game-board
            #top-left
            #top
            #top-right
            #middle-left
            #middle
            #middle-right
            #bottom-left
            #bottom
            #bottom-right
          #game-footer
            #score-board
              p#player1-score
              p#tie
              p#player2-score
    .row
      .col-md-8.col-md-offset-2
          .input-group.input-group-lg
            .input-group-btn
              button#restart-game.btn.btn-default restart
            input#msg-input.form-control(type='text')
            .input-group-btn
              button#send.btn.btn-primary send
    .row
      .col-md-8.col-md-offset-2
        div#messages

    script(src='jquery/jquery-2.2.3.min.js', type='text/javascript')
    script(src='bootstrap-3.3.6-dist/js/bootstrap.min.js')
    script(src='/socket.io/socket.io.js')
    script(src='game.js', type='text/javascript')
    script.
      $("#iconModal").modal();
